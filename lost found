<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Lost & Found using QR Code</title>
  <script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>
  <style>
    body { font-family: Arial; text-align: center; margin-top: 50px; }
    input { padding: 8px; margin: 5px; width: 200px; }
    button { padding: 10px 20px; }
    #qrcode { margin-top: 20px; }
  </style>
</head>
<body>
  <h1>Lost & Found using QR Code</h1>

  <p>Enter your Name and Email/Number:</p>
  <input type="text" id="name" placeholder="Your Name" required><br>
  <input type="text" id="contact" placeholder="Email or Number" required><br>
  <button onclick="generateQR()">Generate QR</button>

  <div id="qrcode"></div>

  <script>
    function generateQR() {
      const name = document.getElementById('name').value;
      const contact = document.getElementById('contact').value;
      if (!name || !contact) {
        alert('Please enter both fields');
        return;
      }

      const qrText = `Name: ${name}\nContact: ${contact}`;
      document.getElementById('qrcode').innerHTML = '';
      QRCode.toCanvas(document.getElementById('qrcode'), qrText, function (error) {
        if (error) console.error(error);
        else console.log('QR generated!');
      });
    }
  </script>
</body>
</html>
